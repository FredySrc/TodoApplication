@model TodoApplication.Models.Category

@{
    ViewData["Title"] = "Borrar";
}

<h1>Borar</h1>

<h3>Esta seguro de eliminar este registro?</h3>
<div>
    <h4>Category</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.CategoryName)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.CategoryName)
        </dd>
    </dl>

    <form asp-action="Delete">
        <input type="hidden" asp-for="CategoryID" />
        <button class="btn btn-danger"><i class="fas fa-trash-restore"></i> Borrar</button>
        <a asp-action="Index" class="btn btn-warning"><i class="fa fa-fast-backward"></i> Regresar</a>
    </form>
</div>
